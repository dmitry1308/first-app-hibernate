<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">

    <class name="ru.schepin.hiberntate.model.User" table="users">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="name" column="name"/>
        <property name="age" column="age"/>
        <property name="date" column="birthday"/>

        <!--Прикрепляем юзеров к машинам.-->
        <set name="cars" table="cars_users" lazy="true" fetch="join" cascade="none">

            <!-- Поле для маппинга со стороны User к соединительной таблице -->
            <key>
                <column name="user_id" not-null="true" />
            </key>

            <!-- Поле для маппинга со стороны Car к соединительной таблице -->
            <many-to-many class="ru.schepin.hiberntate.model.Car">
                <column name="car_id" not-null="true" />
            </many-to-many>
        </set>

    </class>
</hibernate-mapping>

