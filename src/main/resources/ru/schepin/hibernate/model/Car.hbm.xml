<?xml version="1.0" encoding="utf-8"?>
        <!DOCTYPE hibernate-mapping PUBLIC
                "-//Hibernate/Hibernate Mapping DTD//EN"
                "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping xmlns="http://www.hibernate.org/xsd/hibernate-mapping">

    <class name="ru.schepin.hiberntate.model.Car" table="cars">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="marka" column="marka"/>
        <property name="model" column="model"/>

        <!--Прикрепляем машины к юзерам.-->
        <set name="users" table="cars_users" lazy="true" fetch="join" cascade="none">

            <!-- Поле для маппинга со стороны Car к соединительной таблице -->
            <key>
                <column name="car_id" not-null="true" />
            </key>

            <!-- Поле для маппинга со стороны юзера к соединительной таблице -->
            <many-to-many class="ru.schepin.hiberntate.model.User">
                <column name="user_id" not-null="true" />
            </many-to-many>
        </set>
    </class>
</hibernate-mapping>

